empno=int(input('Enter employee Number'))
empname=input('Enter Employee Name')
empdesig=input('Enter Employee Designation')
days=float(input("Enter No Days Present:"))
wages=float(input("Enter wages per Day:"))
basicsal=wages*days;
hra=basicsal*0.15
ta=basicsal*0.075
da=basicsal*0.25
insurance=basicsal*0.12  
netsalary=basicsal+hra+da+ta-insurance
print('EMPLOYEE NUMBER',empno)
print('EMPLOYEE NAME',empname)
print('EMPLOYEE DESIGNATION',empdesig)
print(" BASIC SALARY : ",basicsal)
print(" DEARNESS ALLOW. : ",da)
print(" HOUSE RENT ALLOW.: ",hra)
print(" TRAVEL ALLOW. : ",ta)
print(" INSURENCE : ",insurance)
print('NETSALARY',netsalary)
  

